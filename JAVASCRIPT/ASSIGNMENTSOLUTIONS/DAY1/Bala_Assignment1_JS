
<html>
    <head>
          <title>Assignment Scrpit</title>
    </head>
    <body>
        <p> 
            
        </p>
    </body>
    <script>
       candidates = [];
       var n = Number(prompt("Enter the number of candidate names that need to be entered : "));
       for(var i = 0; i<n ;i++)
       {
        candidates[i] = prompt("Enter the name of candidate "+(i+1));
       }
       i=0;
       while(i<n)
       {
        document.write(candidates[i] + "<br/>");
        i++;
        document.write("<i>" + candidates[i] + "</i><br/>");
        i++;
        document.write("<b>" + candidates[i] + "</b><br/>");
        i++;
       }

    </script>
</html>
